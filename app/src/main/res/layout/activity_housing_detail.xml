<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/background"
    tools:context=".HousingDetailActivity">
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/view"
        android:layout_centerInParent="true"
        android:theme="@style/AppTheme.CustomColorOrange"
        android:indeterminate="true" />
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/colorBarBackground"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/trending_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:fontFamily="serif"
            android:text="@string/latest_posts"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </android.support.v7.widget.Toolbar>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/toolbar"
        android:background="@color/border_color"/>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/progressBar"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/house_sample"
                android:id="@+id/posted_house"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/house" />
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_below="@id/posted_house"
                android:textColor="@android:color/white"
                android:fontFamily="serif"
                android:textSize="16.5sp"
                android:textStyle="bold"
                android:text="3 Bedroom Flat/Bungalow For Rent At Victoria Island, Lagos"/>
            <View
                android:id="@+id/view2"
                android:background="@android:color/white"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/title"
                android:layout_height="2.5dp"/>
            <ImageView
                android:id="@+id/location_icon"
                android:layout_margin="6dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/location_white"
                android:layout_below="@id/view2"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_marginLeft="6dp"
                android:padding="2dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/location_icon"
                android:text="Victoria Island, Lagos"
                android:textColor="@android:color/white"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@id/location_icon" />
            <Button
                android:id="@+id/show_phone"
                android:layout_below="@+id/location"
                android:background="@drawable/oval_button"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="6dp"
                android:padding="6dp"
                android:textSize="15sp"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:text="Show phone"
                android:textAllCaps="false"
                android:layout_marginRight="6dp"
                android:layout_width="180dp"
                android:layout_height="45dp" />

            <ImageView
                android:id="@+id/copy_clipboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="24dp"
                android:layout_toRightOf="@+id/show_phone"
                android:src="@drawable/ic_content_copy_black_24dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/show_phone" />
            <android.support.v7.widget.CardView
                android:id="@+id/housing_details_view"
                android:layout_below="@id/show_phone"
                android:layout_marginTop="16dp"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:paddingTop="16dp"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.45"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/textColorDark"
                            android:textSize="14sp"
                            android:text="@string/category" />
                        <TextView
                            android:id="@+id/category_text"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:text="@string/for_rent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/textColorDark"
                            android:textSize="14sp"
                            android:text="Price" />
                        <TextView
                            android:id="@+id/price_text"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:text="â‚¦450,000,0000000"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/textColorDark"
                            android:textSize="14sp"
                            android:text="@string/state" />
                        <TextView
                            android:id="@+id/state_text"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:text="Lagos"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bathsLayout"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.42"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/textColorDark"
                            android:textSize="14sp"
                            android:text="@string/number_of_baths" />
                        <TextView
                            android:id="@+id/baths_text"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:text="3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/toiletsLayout"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:paddingBottom="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.41"
                            android:padding="6dp"
                            android:textStyle="bold"
                            android:textColor="@color/textColorDark"
                            android:textSize="14sp"
                            android:text="@string/number_of_toilets" />
                        <TextView
                            android:id="@+id/toilets_text"
                            android:layout_weight="1"
                            android:padding="6dp"
                            android:gravity="start"
                            android:textSize="14sp"
                            android:text="3+"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/description_view"
                android:layout_below="@id/housing_details_view"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/description_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text=""
                        android:textSize="14sp"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/profile_view"
                android:layout_below="@id/description_view"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/posted_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:layout_marginTop="16dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:layout_marginBottom="30dp"
                        android:textStyle="bold"
                        android:textSize="15.5sp"
                        android:text="Posted by:"
                        />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:src="@drawable/circle_image"
                        android:layout_below="@id/posted_by"
                        android:id="@id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp" />

                    <TextView
                        android:id="@+id/username_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/posted_by"
                        android:layout_marginTop="16dp"
                        android:layout_marginLeft="16dp"
                        android:layout_toRightOf="@+id/profile_image"
                        android:fontFamily="sans-serif"
                        android:text="Tari Bright"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                    <LinearLayout
                        android:layout_below="@id/username_text"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:paddingTop="16dp"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:padding="6dp"
                                android:textStyle="bold"
                                android:textColor="@color/textColorDark"
                                android:textSize="14sp"
                                android:text="@string/email" />
                            <TextView
                                android:id="@+id/email_text"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:gravity="start"
                                android:textSize="14sp"
                                android:text="benbright065@gmail.com"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:padding="6dp"
                                android:textStyle="bold"
                                android:textColor="@color/textColorDark"
                                android:textSize="14sp"
                                android:text="@string/phone_number" />
                            <TextView
                                android:id="@+id/number_text"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:gravity="start"
                                android:textSize="14sp"
                                android:text="08066738887"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.35"
                                android:padding="6dp"
                                android:textStyle="bold"
                                android:textColor="@color/textColorDark"
                                android:textSize="14sp"
                                android:text="@string/status" />
                            <TextView
                                android:id="@+id/status_text"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:gravity="start"
                                android:textSize="14sp"
                                android:text="Verified"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.35"
                                android:padding="6dp"
                                android:textStyle="bold"
                                android:textColor="@color/textColorDark"
                                android:textSize="14sp"
                                android:text="Posted" />
                            <TextView
                                android:id="@+id/time_text"
                                android:layout_weight="1"
                                android:padding="6dp"
                                android:gravity="start"
                                android:textSize="14sp"
                                android:layout_marginBottom="16dp"
                                android:text="11/11/2037"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/disclaimer_view"
                android:layout_below="@id/profile_view"
                card_view:cardCornerRadius="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                card_view:cardElevation="2dp"
                card_view:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/disclaimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:padding="6dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textStyle="bold"
                        android:textSize="15.5sp"
                        android:text="Disclaimer" />
                    <TextView
                        android:layout_below="@+id/disclaimer"
                        android:id="@+id/disclaimer_text"
                        android:padding="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="The information displayed about this property comprises of a property advertisement. Find A Place makes no warranty as to the accuracy or completeness of the advertisement or any linked or associated information, and find a place has no control over the content. The property listings does not constitute property particulars. The information above is maintained by the mentioned real estate agent above."/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_alignParentRight="true"
        app:rippleColor="@android:color/holo_orange_light"
        app:backgroundTint="#EE7600"
        android:tint="@android:color/white"
        android:src="@drawable/ic_mode_edit_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true" />
    <Button
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:visibility="gone"
        android:textColor="@drawable/text_selector4"
        android:layout_margin="8dp"
        android:background="@drawable/button_selector4"
        android:text="Delete" />
</RelativeLayout>